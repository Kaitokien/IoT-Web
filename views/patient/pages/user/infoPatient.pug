extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1(class="mb-4") Cập nhật thông tin cá nhân

  +alert-success(5000)
  +alert-error(5000)
  form(
    action='tai-khoan/edit'
    method="post"
  ) 
    div(class="form-group")
      label(for="fullName") Họ tên *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        required
        value=patient.fullName
      )
    div(class="form-group")
      label(for="email") Email *
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        value=patient.email
      )
    div(class="form-group")
      label(for="age") Tuổi *
      input(
        type="number"
        class="form-control"
        id="age"
        name="age"
        required
        value=patient.age
      )
    div(class="form-group")
      label(for="gender") Giới tính *
      select(name="gender" id="gender") 
        option(value="Nam" selected=(patient.gender === 'Nam')) Nam
        option(value="Nữ" selected=(patient.gender === 'Nữ')) Nữ
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật