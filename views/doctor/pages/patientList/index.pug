extends ../../layouts/default.pug

block main
  h1(class="mb-4") Danh sách Bệnh Nhân

  if patients.length > 0
    table(class="table table-hover mt-4")
      thead
        tr
          th Tên Bệnh Nhân
          th Tuổi
          th Giới Tính
          th Trạng Thái
          th Hành Động
      tbody
        each patient in patients
          tr
            td #{patient.fullName}
            td #{patient.age}
            td #{patient.gender}
            if patient.status === 'Critical'
              td.text-danger Nguy Kịch
            else if patient.status === 'Needs Attention'
              td.text-warning Cần Chú Ý
            else
              td.text-success Ổn Định
            td
              a.btn.btn-primary(href=`/doctor/patient-list/patient/${patient._id}/history`) Xem lịch sử
  else
    p.mt-4 Không có bệnh nhân nào trong danh sách.
